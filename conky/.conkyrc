# conky configuration
# http://conky.sourceforge.net/variables.html
# http://conky.sourceforge.net/documentation.html
#
# Font used: https://github.com/lucy/tewi-font
# Weather script: https://bbs.archlinux.org/viewtopic.php?id=37381
##############################################
# Settings
##############################################
background no
use_xft yes
font tewi:size=9
#border_inner_margin 20
#boder_margin 20
border_outer_margin 5
xftalpha 1
update_interval 1.5
total_run_times 0
own_window yes
own_window_transparent no
own_window_colour 0e161a
own_window_type desktop
own_window_argb_visual yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
double_buffer yes
minimum_size 738
maximum_width 758
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no
default_color 444444
#default_shade_color 000000
#default_outline_color 828282
alignment top_right
gap_x 0
gap_y 9
color1 999999
color2 e193ae
color3 6c9b9f
color4 4A5860
color5 f4e7b1
color6 6c9b9f
RED=\033[0;31m
no_buffers yes
uppercase no
cpu_avg_samples 2
override_utf8_locale yes
##############################################
#${goto 120}${color1}hdd:${color} ${fs_used /}/${fs_size /}\
#${color1}lan:${color} ↓${downspeedf wlan0} kiB/s ↑${upspeedf wlan0} kiB/s\
#${alignr}${color1}ext ip:${color} ${exec curl -s www.icanhazip.com} \
#${color6}║${color}
#${alignr}${color1}io:${color} ${diskio} // \
##############################################
TEXT
${alignr}${color3}⯍ ${color 9fc2c5}${cpu cpu0}%${color}  \
${alignr}${color3}┉ ${color 9fc2c5}${memperc}%${color}  \
${alignr}${color3}⬙ ${color 9fc2c5}${hwmon 1 temp 2}C${color}  \
${alignr}${color2}⯎ ${color e8c6d2}${wireless_essid wlan0}${color}  \
${alignr}${color2}⭭ ${color e8c6d2}${downspeedf wlan0}${color}${color2}k${color}  ${color2}⭫ ${color e8c6d2}${upspeedf wlan0}${color}${color2}k${color}  \
${alignr}${color5}☁ ${color f5edce}${execi 300 /usr/local/bin/weather.sh "EUR|DE|Stein-Neukirch"}${color}  \
${alignr}${color5}⬞ ${color f5edce}${time %H}:${time %M}${color}  \
