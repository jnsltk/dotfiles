
!░░█▄ Window Settings
URxvt*scrollBar: false

!░░█▄ Font
!URxvt.font:           xft:Droid Sans Mono for Powerline:bold:pixelsize=12
!URxvt.boldFont:       xft:Droid Sans Mono for Powerline:bold:pixelsize=12
!URxvt.italicFont:     xft:Droid Sans Mono for Powerline:italic:pixelsize=12
!URxvt.boldItalicFont: xft:Droid Sans Mono for Powerline:bold:italic:pixelsize=12

URxvt.font: xft:tewi-medium:pixelsize=12
URxvt.boldFont: xft:tewi-medium:pixelsize=12
*boldFont: -misc-fixed-bold-r-normal--15-140-75-75-c-90-iso10646-1
*font: -misc-fixed-medium-r-normal--15-140-75-75-c-90-iso10646-1

!Xft.dpi:        132
!Xft.antialias:  true
!Xft.rgba:       rgba
!Xft.hinting:    true
!Xft.autohint: true
!Xft.hintstyle:  hintfull

URxvt.externalBorder:0
URxvt.internalBorder:5

URxvt*termName: rxvt-unicode-256color

!░░█▄ Font settings
!URxvt*letterSpace: -2
!URxvt*depth: 32
!URxvt*antialias: true

!░░█▄ Clickable links
URxvt.perl-ext-common: default,matcher
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1

!░░█▄ Colors
URxvt*cursorColor: 1

!░█▄ First color = bright tone
!░█▄ Second color = dark tone

! tangoesque scheme
*background: #191c23
*foreground: #9bbbc6
! Black (not tango) + DarkGrey
*color0:  #121418
*color8:  #232730
! DarkRed + Red
*color1:  #a35b66
*color9:  #d2979f
! DarkGreen + Green
*color2:  #80aa83
*color10: #b4d8b7
! DarkYellow + Yellow
*color3:  #ffffa6
*color11: #f6f7c6
! DarkBlue + Blue
*color4:  #495d6e
*color12: #8197a9
! DarkMangenta + Mangenta
*color5:  #b993bb
*color13: #d1b3d3
!DarkCyan + Cyan (both not tango)
*color6:  #acbece
*color14: #bcc7d1
! LightGrey + White
*color7:  #b4b6bb
*color15: #e1e4ec
