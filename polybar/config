[colors]
background = #2B303B
background-alt = #444
foreground = #ccc
foreground-alt = #f0f0f0
primary = #dc578c
secondary = #f8fb9d
alert = #92dfe8

[bar/example]
monitor = LVDS1
width = 100%
height = 25
;offset-x = 1%
;offset-y = 1%
radius = 0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0
border-color = #000000

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = fixed:pixelsize=10;1
font-1 = unifont:size=6;0
font-2 = Siji:pixelsize=4;1

modules-left = date ewmh xwindow
;modules-center = date
modules-right = volume mpd temperature cpu vpncheck
;networkspeed redshift

[module/ewmh]
type = internal/xworkspaces
pin-workspaces = true
enable-click = true
enable-scroll = true
label-active-background = #69acd3
label-active-foreground = #ffffff
label-empty-background = #1B2231
label-urgent-background = #ffffff
label-mode-padding = 4
label-padding-left = 0
label-padding-right = 0

[module/xwindow]
type = internal/xwindow
interval = 2
label = %title:0:60:%
format-prefix = 
format-prefix-padding-left = 3
format-prefix-padding-right = 0
label-background = #dc578c
format-prefix-background = #dc578c
format-prefix-foreground = #ffffff
label-foreground = #ffffff
label-padding-left = 1
label-padding-right = 3

[module/vpncheck]
type = custom/script
exec = pgrep openvpn
interval = 5
label =  vpn
label-background = #5ed69c
label-foreground = #ffffff
label-padding-left = 3
label-padding-right = 3
;format-underline = #268bd2
;format-prefix-foreground = #f0f0f0

[module/mpd]
type = internal/mpd
interval = 2
format-online = <label-song>
label-song-padding-left = 3
label-song-padding-right = 3
label-song =  %artist% - %title%
label-song-background = #69acd3
label-song-foreground = #ffffff
format-offline = 
;<icon-prev> <icon-stop> <toggle> <icon-next>
host = 127.0.0.1
port = 6600

;icon-prev = 
;icon-stop = 
;icon-play = 
;icon-pause = 
;icon-next = 

;label-song-maxlen = 25
label-song-ellipsis = true

[module/cpu]
type = internal/cpu
interval = 2
;format-prefix = ""
format-prefix-foreground = ${colors.foreground-alt}
;format-underline = #f90000
label =  %percentage%%
label-background = #161D2D
label-padding-left = 3
label-padding-right = 3

[module/networkspeed]
type = internal/network
interface = enp5s0
label-connected = "%downspeed:7% %upspeed:7%"
label-connected-padding-left = 2
label-connected-padding-right = 3
label-connected-background = #1B2231

[module/date]
type = internal/date
interval = 5

date = "%A"
date-alt = "%d.%m.%y"
time = %H:%M
time-alt = %H:%M

label =  %time% %date%
label-background = #161D2D
label-foreground = ${root.foreground}
label-mode-padding = 0
label-padding-left = 3
label-padding-right = 3

[module/volume]
type = internal/volume

format-volume = <label-volume>
;<bar-volume>
label-volume =  %percentage%%
label-volume-foreground = ${root.foreground}
label-volume-padding-right = 3
label-volume-padding-left = 3
label-volume-background = #252C3A

;format-muted-prefix = " "
format-muted-foreground = ${colors.foreground-alt}
label-muted =  muted
label-muted-padding-right = 3
label-muted-padding-left = 3
label-muted-background = #252C3A

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp><label>
format-background = #1b2231
format-foreground = #ffffff
format-warn = <ramp><label-warn>
format-warn-background = #DC578C
ramp-padding-left = 3
ramp-padding-right = 0

label = %temperature%
label-warn = %temperature%
label-warn-foreground = #ffffff
label-warn-padding-right = 3
label-warn-padding-left = 1
label-padding-left = 1
label-padding-right = 3

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-foreground = ${colors.foreground-alt}

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5

